<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ingredientController</servlet-name>
        <servlet-class>com.example.pizzamaker.controller.IngredientController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ingredientController</servlet-name>
        <url-pattern>/ingredients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderController</servlet-name>
        <servlet-class>com.example.pizzamaker.controller.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.example.pizzamaker.controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>productTypeController</servlet-name>
        <servlet-class>com.example.pizzamaker.controller.ProductTypeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productTypeController</servlet-name>
        <url-pattern>/productType</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>tableController</servlet-name>
        <servlet-class>com.example.pizzamaker.controller.TableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tableController</servlet-name>
        <url-pattern>/table</url-pattern>
    </servlet-mapping>
        
</web-app>